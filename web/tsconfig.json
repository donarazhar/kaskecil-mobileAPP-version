{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@kas-kecil/shared": ["../mobile/src/lib/shared"],
      "@kas-kecil/api-client": ["../mobile/src/lib/api-client"],
      "@kas-kecil/validators": ["../mobile/src/lib/validators"]
    }
  },
  "include": ["src", "../mobile/src/lib"],
"exclude": ["../mobile/src/lib/shared/LanguageContext.tsx"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
